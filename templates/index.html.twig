{% extends "base.html.twig" %}
{% block body %}
    <h2>Dashboard</h2>
    <h3>Willkommen {{ user }}</h3>
    <div class="accordion accordion-flush" id="accordionExample">
    {% for entries in data %}
        {% for entry in entries %}
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingOne">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{entry.id}}" aria-expanded="true" aria-controls="collapse{{entry.id}}">
                        {{ entry.title }}
                    </button>
                </h2>
                <div id="collapse{{entry.id}}" class="accordion-collapse collapse" aria-labelledby="heading{{entry.id}}" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        <div class="form">
                            <form class="row g-3">
                                <div class="col-md-6">
                                    <label for="inputEmail{{entry.id}}" class="form-label">Email</label>
                                    <input type="email" class="form-control" id="inputEmail{{entry.id}}" value="{{ entry.email }}">
                                </div>
                                <div class="col-md-6">
                                <label for="inputPassword{{entry.id}}" class="form-label">Password</label>
                                    <div class="input-group mb-3">
                                        <input type="password" class="form-control" id="inputPassword{{entry.id}}" value="{{ entry.password }}">
                                        <span class="input-group-text eyesight" id="basic-addon{{entry.id}}">
                                            <i class="bi bi-eye-fill"></i>
                                        </span>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <label for="inputUser{{entry.id}}" class="form-label">User</label>
                                    <input type="text" class="form-control" id="inputUser{{entry.id}}" placeholder="Username" value="{{ entry.user }}">
                                </div>
                                {# @TODO: Add Description field? #}
                            </form>
                        </div>
                    </div>
                </div>     
            </div>
            <br>
        {% endfor %}
        
    {% endfor %}
    </div>


    
    
{% endblock %}